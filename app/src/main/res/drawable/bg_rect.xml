            <corners android:radius="4dp"/>
            <stroke android:width="2dp" android:color="@color/kidoo_gren_alpha"/>
            <!--<solid android:color="@color/kidoo_gren_alpha"/>-->
        </shape>
    </item>

    <item android:state_pressed="false">
        <shape>
            <corners android:radius="4dp"/>
            <stroke android:width="2dp" android:color="@color/kidoo_gren"/>
            <!--<solid android:color="@color/kidoo_gren"/>-->
        </shape>
    </item>

</selector>