<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@color/white"
              android:orientation="vertical">
    <!--
        <include
            android:id="@+id/id_toolbar"
            layout="@layout/toolbar_login" />
        -->

    <Space
        android:layout_width="match_parent"
        android:layout_height="48dp"/>

    <com.kidoo.customer.widget.CircleImageView
        android:id="@+id/profile_image"
        android:layout_width="96dp"
        android:layout_height="96dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/lay_32"
        android:src="@drawable/def_user"
        app:civ_border_color="@color/white"
        app:civ_border_width="2dp"
        />


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/lay_24"
        android:layout_marginRight="@dimen/lay_24"
        android:layout_marginTop="@dimen/lay_48">

        <TextView
            android:id="@+id/acount_id_tilte"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="bottom"
            android:text='@string/login_acount_id_title'
            android:textColor="@color/kidoo_9fa0a4"
            android:textSize="@dimen/font_20"/>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/acount_id_tilte"
            android:layout_marginLeft="@dimen/lay_24"
            android:layout_marginRight="@dimen/lay_8"
            android:layout_toRightOf="@+id/acount_id_tilte"
            >

            <EditText
                android:id="@+id/acnount_id"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@null"
                android:hint="@string/login_account_hint"
                android:inputType="number"
                android:textColorHint="#669fa0a4"
                android:textSize="@dimen/font_20"
                />

            <ImageView
                android:id="@+id/clean_id"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:src="@drawable/edit_clear_btn"
                android:visibility="invisible"
                />

        </FrameLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:layout_below="@+id/acount_id_tilte"
            android:background="#696969"/>


    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/lay_24"
        android:layout_marginRight="@dimen/lay_24"
        android:layout_marginTop="@dimen/lay_32">

        <TextView
            android:id="@+id/acount_pwd_tilte"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="bottom"
            android:text='@string/login_account_pwd_title'
            android:textColor="@color/kidoo_9fa0a4"
            android:textSize="@dimen/font_20"/>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/acount_pwd_tilte"
            android:layout_marginLeft="@dimen/lay_24"
            android:layout_marginRight="@dimen/lay_8"
            android:layout_toRightOf="@+id/acount_pwd_tilte"
            >

            <EditText
                android:id="@+id/acnount_pwd"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@null"
                android:hint="@string/login_password_hint"
                android:inputType="textPassword"
                android:textColor="@color/kidoo_9fa0a4"
                android:textColorHint="#669fa0a4"
                android:textSize="@dimen/font_20"
                />

            <ImageView
                android:id="@+id/show_pwd"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:src="@drawable/btn_closekey"
                />

        </FrameLayout>


        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:layout_below="@+id/acount_pwd_tilte"
            android:background="#696969"/>


    </RelativeLayout>

    <Space
        android:layout_width="match_parent"
        android:layout_height="@dimen/lay_20"/>

    <Button
        android:id="@+id/bt_login"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_marginLeft="24dp"
        android:layout_marginRight="24dp"
        android:layout_marginTop="16dp"
        android:background="@drawable/bg_login_register"
        android:elevation="0dp"
        android:outlineProvider="none"
        android:text="@string/login_in_tilte"
        android:textColor="@color/kidoo_gren"
        android:textSize="@dimen/font_18"
        android:translationZ="0dp"/>

    <Space
        android:layout_width="match_parent"
        android:layout_height="@dimen/lay_12"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/lay_12">

        <TextView
            android:id="@+id/sigin_in"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_marginLeft="@dimen/lay_12"
            android:text="@string/sign_in_tilte"
            android:textColor="@color/kidoo_0EC68D"
            android:textSize="@dimen/font_18"/>


        <TextView
            android:id="@+id/forget_pwd"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/lay_12"
            android:text="@string/forget_password"
            android:textColor="@color/kidoo_0EC68D"
            android:textSize="@dimen/font_18"/>

    </RelativeLayout>


    <!--<LinearLayout-->
    <!--android:layout_width="match_parent"-->
    <!--android:layout_height="match_parent"-->
    <!--android:orientation="horizontal">-->

    <!--<Button-->
    <!--android:id="@+id/button"-->
    <!--android:layout_width="match_parent"-->
    <!--android:layout_height="wrap_content"-->
    <!--android:layout_gravity="bottom"-->
    <!--android:background="@drawable/bottom_button_bg"-->
    <!--android:text="@string/login_in_tilte"-->
    <!--android:textSize="@dimen/font_18"-->
    <!--android:textColor="@color/kidoo_gren"/>-->

    <!--</LinearLayout>-->

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/disclaimer_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:text=""
            android:textColor="@color/kidoo_bebebe"
            android:textSize="@dimen/font_12"
            />
    </RelativeLayout>


</LinearLayout>