<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <com.kidoo.customer.widget.expandMenu.SelectMenuView
        android:id="@+id/search_menu"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="15dp"
        android:background="@drawable/profile_bg"
        android:orientation="horizontal"
        android:weightSum="4">

        <com.rengwuxian.materialedittext.MaterialEditText
            android:id="@+id/met_team_name"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_weight="3"
            android:hint="@string/query_team_edit_hint"
            android:imeOptions="actionSearch"
            android:maxLines="1"
            android:paddingLeft="@dimen/lay_10"
            android:textColor="#999"
            android:textColorHint="#999"
            android:textSize="@dimen/font_14"
            app:met_hideUnderline="false"
            app:met_textColor="@color/kidoo_hint_gray" />

        <Button
            android:id="@+id/bt_search"
            android:layout_width="0dp"
            android:layout_height="@dimen/size_36"
            android:layout_marginLeft="@dimen/lay_12"
            android:layout_marginRight="@dimen/lay_8"
            android:layout_marginTop="@dimen/lay_4"
            android:layout_marginBottom="@dimen/lay_4"
            android:layout_weight="1"
            android:background="@drawable/bg_rect"
            android:elevation="0dp"
            android:outlineProvider="none"
            android:text="@string/query_button_search"
            android:textColor="@color/kidoo_gren"
            android:textSize="@dimen/font_14"
            android:translationZ="0dp" />


    </LinearLayout>

    <com.weavey.loading.lib.LoadingLayout
        android:id="@+id/loading_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:isFirstVisible="false"
        android:layout_marginTop="@dimen/lay_8">


        <android.support.v7.widget.RecyclerView
            android:id="@+id/swipe_target"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:overScrollMode="never"
            android:scrollbars="none" />


    </com.weavey.loading.lib.LoadingLayout>


</LinearLayout>