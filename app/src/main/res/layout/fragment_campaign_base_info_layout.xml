<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <com.kidoo.customer.widget.PersonalScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="@dimen/lay_24"
            android:layout_marginTop="@dimen/lay_8"
            android:orientation="vertical"
            android:paddingBottom="@dimen/lay_16">

            <LinearLayout
                android:id="@+id/channel_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/lay_8"
                android:layout_marginTop="@dimen/lay_8"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/channel_a"
                    style="@style/main_title_style"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="test"/>

                <TextView
                    android:id="@+id/channel_b"
                    style="@style/main_title_style"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="test"/>

                <TextView
                    android:id="@+id/channel_c"
                    style="@style/main_title_style"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="test"/>

            </LinearLayout>


            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="240dp">

                <com.kidoo.customer.widget.glideimageview.GlideImageView
                    android:id="@+id/iv_match_pic"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:clickable="true"
                    android:focusable="true"
                    app:riv_pressed_border_color="@color/kidoo_gren_alpha"
                    app:riv_pressed_border_width="2dp"
                    app:riv_pressed_mask_color="@color/placeholder"
                    />

                <com.kidoo.customer.widget.glideimageview.progress.CircleProgressView
                    android:id="@+id/pv_match_pic_progress"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_gravity="center"
                    android:progress="0"
                    app:cpv_innerPadding="2dp"
                    app:cpv_outerColor="@color/transparent90_white"
                    app:cpv_outerSize="1dp"
                    app:cpv_progressNormalColor="@color/transparent"
                    app:cpv_progressReachColor="@color/transparent90_white"
                    app:cpv_progressStyle="FillInnerArc"/>

            </FrameLayout>


            <com.kidoo.customer.widget.KidooSubtitleView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/lay_8"
                android:layout_marginTop="@dimen/lay_12"
                app:subtitle="@string/campaign_status"/>

            <TextView
                android:id="@+id/tv_match_status"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/lay_12"
                android:text="text"
                android:textColor="@color/kidoo_gray"
                android:textSize="@dimen/font_16"/>


            <com.kidoo.customer.widget.KidooSubtitleView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/lay_8"
                android:layout_marginTop="@dimen/lay_12"
                app:subtitle="@string/campaign_level"/>

            <TextView
                android:id="@+id/tv_match_level"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/lay_12"
                android:text="text"
                android:textColor="@color/kidoo_gray"
                android:textSize="@dimen/font_16"/>

            <com.kidoo.customer.widget.KidooSubtitleView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/lay_8"
                android:layout_marginTop="@dimen/lay_12"
                app:subtitle="@string/campaign_format"/>

            <TextView
                android:id="@+id/tv_match_format"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/lay_12"
                android:text="text"
                android:textColor="@color/kidoo_gray"
                android:textSize="@dimen/font_16"/>

            <com.kidoo.customer.widget.KidooSubtitleView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/lay_8"
                android:layout_marginTop="@dimen/lay_12"
                app:subtitle="@string/campaign_info"/>

            <TextView
                android:id="@+id/tv_match_info"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/lay_12"
                android:text="text"
                android:textColor="@color/kidoo_gray"
                android:textSize="@dimen/font_16"/>


        </LinearLayout>

    </com.kidoo.customer.widget.PersonalScrollView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >

        <Button
            android:id="@+id/bt_quit_enroll"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_marginBottom="@dimen/lay_4"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:layout_marginTop="4dp"
            android:background="@drawable/btn_normal_bg"
            android:text="@string/campaign_quit_errol_btn"
            android:textColor="@color/white"
            android:textSize="16sp"/>

        <Button
            android:id="@+id/bt_enroll"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_marginBottom="@dimen/lay_12"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:layout_marginTop="@dimen/lay_8"
            android:background="@drawable/btn_normal_bg"
            android:text="@string/campaign_errol_situaion_btn"
            android:textColor="@color/white"
            android:textSize="16sp"/>


    </LinearLayout>


</LinearLayout>