<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"

              android:orientation="vertical">


    <!--android:drawableLeft="@drawable/item_campaign_title_icon"-->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/lay_12"
        >

        <View
            android:layout_width="@dimen/lay_4"
            android:layout_height="match_parent"
            android:layout_alignTop="@+id/campaign_session_title"
            android:layout_alignBottom="@+id/campaign_session_title"
            android:background="@color/kidoo_gren"
            />

        <TextView
            android:id="@+id/campaign_session_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/lay_12"
            android:layout_marginTop="@dimen/lay_12"
            android:text="test"
            android:textColor="@color/kidoo_gray"
            android:textSize="@dimen/font_18"

            />

    </RelativeLayout>

    <TextView
        android:id="@+id/campaign_session_info"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/lay_12"
        android:layout_marginLeft="@dimen/lay_24"
        android:layout_marginTop="@dimen/lay_4"
        android:text="test"
        android:textColor="@color/kidoo_gray"
        android:textSize="@dimen/font_18"

        />

    <TextView
        android:id="@+id/campaign_session_starttime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/lay_12"
        android:layout_marginLeft="@dimen/lay_24"
        android:layout_marginTop="@dimen/lay_4"
        android:text="test"
        android:textColor="@color/kidoo_gray"
        android:textSize="@dimen/font_18"

        />

    <TextView
        android:id="@+id/campaign_session_endtime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/lay_12"
        android:layout_marginLeft="@dimen/lay_24"
        android:layout_marginTop="@dimen/lay_4"
        android:text="test"
        android:textColor="@color/kidoo_gray"
        android:textSize="@dimen/font_18"

        />

    <View android:layout_height="2px"
          android:layout_width="match_parent"
          android:background="@color/list_divider_color"
          />

</LinearLayout>