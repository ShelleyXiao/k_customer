<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:padding="@dimen/lay_4"
    >

    <com.kidoo.customer.widget.glideimageview.GlideImageView
        android:id="@+id/iv_medal_pic"
        android:layout_width="@dimen/lay_72"
        android:layout_height="@dimen/lay_72"
        android:layout_margin="@dimen/lay_2"
        android:clickable="true"
        android:focusable="true"
        app:riv_border_color="@color/kidoo_gren_alpha"
        app:riv_border_width="@dimen/lay_2"
        app:riv_corner_radius="@dimen/lay_10"
        app:riv_is_circle="false"
        app:riv_pressed_border_color="@color/kidoo_gren_alpha"
        app:riv_pressed_border_width="2dp"
        app:riv_pressed_mask_color="@color/placeholder"
        tools:src="@drawable/def_user"
        />

    <android.support.v7.widget.AppCompatTextView
        android:id="@+id/tv_medal_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        style="@style/item_title_true_16sp"
        android:layout_gravity="center_horizontal"
        tools:text="test"
        />


</LinearLayout>