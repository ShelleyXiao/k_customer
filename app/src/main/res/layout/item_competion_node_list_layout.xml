<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="@dimen/lay_4">

    <android.support.v7.widget.AppCompatTextView
        android:id="@+id/tv_node_time"
        style="@style/item_title_true_16sp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:lines="1"
        tools:text="test" />


    <android.support.v7.widget.AppCompatTextView
        android:id="@+id/tv_node_msg"
        style="@style/item_title_true_16sp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/lay_8"
        android:lines="1"
        android:textColor="@color/text_dark"
        tools:text="test" />

    <FrameLayout
        android:id="@+id/left_image"
        android:layout_width="match_parent"
        android:layout_height="240dp">

        <com.kidoo.customer.widget.glideimageview.GlideImageView
            android:id="@+id/iv_node_pic"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

        <com.kidoo.customer.widget.glideimageview.progress.CircleProgressView
            android:id="@+id/pv_node_pic_progress"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:progress="0"
            app:cpv_innerPadding="2dp"
            app:cpv_outerColor="@color/transparent90_white"
            app:cpv_outerSize="1dp"
            app:cpv_progressNormalColor="@color/transparent"
            app:cpv_progressReachColor="@color/transparent90_white"
            app:cpv_progressStyle="FillInnerArc" />
    </FrameLayout>


</LinearLayout>