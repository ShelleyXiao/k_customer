<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:id="@+id/content"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:background="@color/white"
              android:orientation="vertical"
    >

    <com.kidoo.customer.widget.KidooSubtitleView
        android:id="@+id/info_type_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/lay_8"
        android:layout_marginTop="@dimen/lay_4"
        app:subtitle="@string/info_type_wonderful_event"/>

    <TextView
        android:id="@+id/info_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ellipsize="end"
        android:lineSpacingExtra="@dimen/lay_2"
        android:maxLines="1"
        android:textColor="@color/text_dark"
        android:textSize="@dimen/font_18"
        />

    <TextView
        android:id="@+id/update_time"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ellipsize="end"
        android:lineSpacingExtra="@dimen/lay_2"
        android:maxLines="1"
        android:textColor="@color/transparent20_white"
        android:textSize="@dimen/font_16"
        />


    <android.support.constraint.ConstraintLayout
        android:id="@+id/left_image"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintDimensionRatio="16:9">

        <com.sunfusheng.glideimageview.GlideImageView
            android:id="@+id/info_pic"
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:transitionName="@string/transitional_image"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>

        <com.sunfusheng.glideimageview.progress.CircleProgressView
            android:id="@+id/info_pic_progress"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:progress="0"
            app:cpv_innerPadding="2dp"
            app:cpv_outerColor="@color/transparent90_white"
            app:cpv_outerSize="1dp"
            app:cpv_progressNormalColor="@color/transparent"
            app:cpv_progressReachColor="@color/transparent90_white"
            app:cpv_progressStyle="FillInnerArc"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>
    </android.support.constraint.ConstraintLayout>


    <TextView
        android:id="@+id/tv_content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:layout_marginRight="@dimen/lay_8"
        android:ellipsize="end"
        android:lineSpacingExtra="@dimen/lay_2"
        android:maxLines="1"
        android:text="@string/read_actic_title"
        android:textColor="@color/text_dark"
        android:textSize="@dimen/font_18"/>


</LinearLayout>