<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/lay_8">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/broadcast_feature_pic"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/lay_8"
            android:scaleType="fitCenter"
            android:src="@drawable/icon_sign_basketball"/>

        <TextView
            android:id="@+id/broadcast_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="@dimen/lay_8"
            android:text="(1)"
            android:textColor="@color/black"
            android:textSize="@dimen/font_18"/>


        <TextView
            android:id="@+id/broadcast_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="@dimen/lay_8"
            android:text="1"
            android:textColor="@color/black"
            android:textSize="@dimen/font_18"/>

    </LinearLayout>

    <TextView
        android:id="@+id/broadcast_status"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="@dimen/lay_8"
        android:text="test"
        android:textColor="@color/black"
        android:textSize="@dimen/font_18"
        android:layout_centerVertical="true"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="@dimen/lay_8"/>

</RelativeLayout>