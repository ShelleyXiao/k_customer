<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    >

    <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/ll_tab"
        android:layout_width="match_parent"
        android:layout_height="@dimen/lay_48"
        android:background="@color/white"
        android:orientation="horizontal"
        >

        <LinearLayout
            android:id="@+id/ll_subject"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/subject"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_centerVertical="true"
                android:layout_gravity="center_horizontal"
                android:gravity="center_horizontal|center_vertical"
                android:text="type1"
                android:textColor="@color/text_dark"
                android:textSize="@dimen/font_20"
                />

            <ImageView
                android:id="@+id/img_sub"
                android:layout_width="20dp"
                android:layout_height="12dp"
                android:layout_centerVertical="true"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="@dimen/lay_20"
                android:layout_toRightOf="@+id/subject"
                android:src="@drawable/channel_close_icon"/>
        </LinearLayout>

        <View
            android:id="@+id/line_sub"
            android:layout_width="@dimen/lay_2"
            android:layout_height="match_parent"
            android:layout_marginBottom="@dimen/lay_20"
            android:layout_marginTop="@dimen/lay_20"
            android:layout_toRightOf="@+id/ll_subject"
            android:background="#e0e0e0">

        </View>

        <LinearLayout
            android:id="@+id/ll_sort"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_toRightOf="@+id/line_sub"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/comprehensive_sorting"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_centerVertical="true"
                android:layout_gravity="center"
                android:gravity="center_horizontal|center_vertical"
                android:text="type2"
                android:textColor="@color/text_dark"
                android:textSize="@dimen/font_20"
                />

            <ImageView
                android:id="@+id/img_cs"
                android:layout_width="20dp"
                android:layout_height="12dp"
                android:layout_centerVertical="true"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="@dimen/lay_20"
                android:layout_toRightOf="@+id/comprehensive_sorting"
                android:src="@drawable/channel_close_icon"/>
        </LinearLayout>

        <View
            android:id="@+id/line_cs"
            android:layout_width="@dimen/lay_2"
            android:layout_height="match_parent"
            android:layout_marginBottom="@dimen/lay_20"
            android:layout_marginTop="@dimen/lay_20"
            android:layout_toRightOf="@+id/ll_sort"
            android:background="#e0e0e0"></View>

        <LinearLayout
            android:id="@+id/ll_select"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_toRightOf="@+id/line_cs"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="horizontal"
            android:visibility="gone"
            >

            <TextView
                android:id="@+id/tv_select"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_centerVertical="true"
                android:gravity="center_horizontal|center_vertical"
                android:text="type3"
                android:textColor="@color/text_dark"
                android:textSize="@dimen/font_20"
                />

            <ImageView
                android:id="@+id/img_sc"
                android:layout_width="32dp"
                android:layout_height="24dp"
                android:layout_centerVertical="true"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="@dimen/lay_20"
                android:layout_toRightOf="@+id/screening"
                android:src="@drawable/channel_close_icon"/>
        </LinearLayout>
    </LinearLayout>

    <View android:layout_width="match_parent"
        android:layout_height="2px"
        android:id="@+id/divder_line"
        android:background="@color/menu_divder_line"
        android:visibility="visible"
        />

    <RelativeLayout
        android:id="@+id/rl_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ll_tab"
        android:background="#88000000">
    </RelativeLayout>
</LinearLayout>

